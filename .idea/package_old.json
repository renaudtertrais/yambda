{
  "name": "yambda",
  "version": "0.0.1",
  "description": "Immutable and fonctional approach to javascript",
  "main": "index.js",
  "scripts": {
    "test": "ava --verbose",
    "cover": "node scripts/cover.js && nyc npm run test",
    "postcover": "nyc report --reporter=lcov",
    "lint": "eslint src/**/*.js specs/**/*.js",
    "build": "node scripts/build-index.js && webpack --progress"
  },
  "author": "Renaud Tertrais",
  "license": "MIT",
  "devDependencies": {
    "ava": "^0.15.2",
    "babel": "^6.5.2",
    "babel-core": "^6.11.4",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-register": "^6.11.6",
    "eslint": "^2.13.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-import-resolver-webpack": "0.4.0",
    "eslint-plugin-import": "^1.10.3",
    "glob": "^7.0.5",
    "nyc": "^7.1.0",
    "webpack": "^1.13.1"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit",
    "files": [
      "specs/*.js"
    ]
  },
  "nyc": {
    "include": [
      "src/*.js"
    ],
    "exclude": [
      "spec/*"
    ]
  }
}
